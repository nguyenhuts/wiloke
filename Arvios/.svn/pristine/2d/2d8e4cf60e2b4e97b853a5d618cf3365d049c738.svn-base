<?php 
  if ( apply_filters('pi_is_section_enable', 'blog') ) :
?>
<?php 
  do_action("pi_hercules_before_blog");
  $background = apply_filters('pi_get_background', 'blog');
?>

<!-- BLOG -->
<section id="blog-section" class="blog-section" data-background='<?php echo esc_attr($background) ?>'>

  <div class="container">

    <div class="st-heading text-center">
      <?php apply_filters( 'pi_the_heading', 'blog' ); ?>
      <?php apply_filters( 'pi_the_description', 'blog' ); ?>
    </div>
    
    <div class="st-body">
      <div class="row">
          <div class="blog-grid">
            <div class="grid-sizer"></div>

                <?php  
                    $showPosts = apply_filters('pi_get_data', 'blog');
                    if ( !$showPosts )
                    {
                      $showPosts = get_option('posts_per_page');
                    }

                    $args = array("posts_per_page"=>$showPosts, "post_status"=>"publish");
                    $query = new WP_Query($args);
                    $piBlogId = get_option("_pi_page_id");

                    while ( $query->have_posts() ) : $query->the_post();
                ?>         
                  <div class="post post-single">
                      <?php echo pi_post_media($post->ID); ?>
                      <!-- .entry-header -->
                      <div class="post-body">
                        <div class="post-title">
                          <?php echo apply_filters('pi_post_formats_icon', ''); ?>
                          <h2 class="h6"><a href="<?php the_permalink() ?>"><?php the_title(); ?></a></h2>
                        </div>
                        <!-- .entry-content -->
                        <div class="post-meta">
                            <span><?php _e('By', 'wiloke'); the_author(); ?></span> / 
                            <span><?php the_date(); ?></span>
                            <span><?php pi_get_comment_info($post->ID);  ?></span>
                        </div>
                      </div>
                  </div>
                <?php 
                  endwhile;
                  wp_reset_query();
                ?>
              
            
          </div>
      </div>
    </div>

   <?php if ( $piBlogId && !empty($piBlogId) ) : ?>
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-md-12 col-lg-12 pi-wrap-blogbutton text-center">
          <a class="h-btn" href="<?php  echo get_permalink($piBlogId)?>"><?php _e('View All Posts', 'wiloke') ?></a>
      </div>
    </div>
    <?php endif; ?>
   </div>
</section>

<?php 
  do_action("pi_hercules_after_blog");
?>
<?php 
endif;
?>


