.lux-gallery li a.md-remove {
  display: none;
  background: #1e8cbe;
  color: #fff;
  padding:3px;
  box-shadow: 0 0 0 1px #fff, 0 0 0 5px #1e8cbe;
}
.lux-gallery li:hover,
.lux-gallery li:focus {
  box-shadow: 0 0 0 1px #fff, 0 0 0 5px #1e8cbe;
}
.lux-gallery li:hover a.md-remove {
  display: block;
}
