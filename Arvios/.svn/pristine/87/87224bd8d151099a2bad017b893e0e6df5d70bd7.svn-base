.image-wrap{
  display: inline-block;
    padding: 10px;
    background-color: #ededed;
}
.image-wrap span {
    display:block;
    position:relative;
}
.image-wrap a {
  display: block;
  z-index: 100;
  position: relative;
  background: rgba(0,0,0,0);
  box-shadow: none;
}
.image-wrap img {
    display: block;
    position: relative;
}
.image-wrap a:before {
    display:block;
    content:"";
    position:absolute;
    width:100%;
    height:100%;
    z-index: 99;
    -moz-box-shadow:inset 0px 0px 5px 1px rgba(0,0,0,0.2);
    -webkit-box-shadow:inset 0px 0px 5px 1px rgba(0,0,0,0.2);
    box-shadow:inset 0px 0px 5px 1px rgba(0,0,0,0.2);
}
