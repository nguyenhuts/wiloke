<wpml-config>
    <custom-types>
        <custom-type translate="1">pi_aboutus</custom-type>
        <custom-type translate="1">pi_funfacts</custom-type>
        <custom-type translate="1">pi_ourclients</custom-type>
        <custom-type translate="1">pi_ourteam</custom-type>
        <custom-type translate="1">pi_portfolio</custom-type>
        <custom-type translate="1">pi_pricingtable</custom-type>
        <custom-type translate="1">pi_services</custom-type>
        <custom-type translate="1">pi_skill</custom-type>
        <custom-type translate="1">pi_testimonials</custom-type>
        <custom-type translate="1">tunna_slider</custom-type>
        <custom-type translate="1">wpcf7_contact_form</custom-type>
    </custom-types>
    <custom-fields>
        <custom-field action="translate">_pi_aboutus</custom-field>
        <custom-field action="custompost">_pi_aboutus</custom-field>
        <custom-field action="copy">_post_settings</custom-field>
        <custom-field action="translate">_pi_funfacts</custom-field>
        <custom-field action="translate">_pi_ourclients</custom-field>
        <custom-field action="translate">_pi_ourteam</custom-field>
        <custom-field action="translate">_pi_portfolio</custom-field>
        <custom-field action="translate">_pi_pricingtable</custom-field>
        <custom-field action="translate">_pi_services</custom-field>
        <custom-field action="translate">_pi_skill</custom-field>
        <custom-field action="translate">_pi_testimonials</custom-field>
        <custom-field action="translate">tunna_slider</custom-field>
    </custom-fields>
    <taxonomies>
        <taxonomy translate="1">category</taxonomy>
        <taxonomy translate="1">post_tag</taxonomy>
        <taxonomy translate="1">pi_portfolio_cats</taxonomy>
        <taxonomy translate="1">portfolio_skill</taxonomy>
    </taxonomies>
    <language-switcher-settings>
        <key name="icl_lang_sel_config">
            <key name="font-current-normal">#444444</key>
            <key name="font-current-hover">#000000</key>
            <key name="background-current-normal">#ffffff</key>
            <key name="background-current-hover">#eeeeee</key>
            <key name="font-other-normal">#444444</key>
            <key name="font-other-hover">#000000</key>
            <key name="background-other-normal">#ffffff</key>
            <key name="background-other-hover">#eeeeee</key>
            <key name="border">#EEEEEE</key>
        </key>
        <key name="icl_lang_sel_footer_config">
            <key name="font-current-normal">#393939</key>
            <key name="font-current-hover">#000000</key>
            <key name="background-current-normal">#F5F5F5</key>
            <key name="background-current-hover">#FFFFFF</key>
            <key name="font-other-normal">#393939</key>
            <key name="font-other-hover">#000000</key>
            <key name="background-other-normal">#F5F5F5</key>
            <key name="background-other-hover">#FFFFFF</key>
            <key name="border">transparent</key>
            <key name="background">transparent</key>
        </key>    
        <key name="icl_language_switcher_sidebar">1</key>
        <key name="icl_widget_title_show">0</key>
        <key name="icl_lang_sel_type">dropdown</key>
        <key name="icl_lso_link_empty">0</key>
        <key name="icl_lso_flags">1</key>
        <key name="icl_lso_native_lang">1</key>
        <key name="icl_lso_display_lang">0</key>
        <key name="icl_lang_sel_footer">0</key>
        <key name="icl_post_availability">1</key>
        <key name="icl_post_availability_position">below</key>
        <key name="icl_post_availability_text">This post is also available in: %s</key>
        <key name="icl_additional_css">#lang_sel img, #lang_sel_list img, #lang_sel_footer img { display: inline; }</key>
    </language-switcher-settings>
</wpml-config>