(function($, window, document, undefined)
{
    "user strict";
    $(document).ready(function()
    {
        var $wilDis = "";
        $("#post-formats-select .post-format").change(function()
        {
           var $getChecked = $("#post-formats-select .post-format:checked").val();
           
               switch ( $getChecked  )
               {
                  case 'gallery':
                      $wilDis = ".zone-of-slideshow";
                      break;

                  case 'quote':
                      $wilDis = ".zone-of-quote";
                      break;

                  case 'video':
                      $wilDis = ".zone-of-youtube";
                      break;

                  case 'audio':
                      $wilDis = ".zone-of-audio";
                      break; 

                  default:
                      $wilDis = ".zone-of-standard";
                      break;
               }

               $("#pi-header-type .form-group").fadeOut( function()
                {
                    $("#pi-header-type "+$wilDis).fadeIn();
                } );
               
        }).trigger("change");   
    })
})(jQuery, window, document);