
.form-group textarea {
    height: 115px;
    padding-left: 12px !important;
    padding-top: 10px !important;
}
.form-control{
	width: 100%;
}

code{
  color: #c7254e;
}

.lux-gallery img{
	max-height: 300px;
	max-width: 300px;
}
.controls.wrap-upload {
	position: relative;
	padding-left: 120px;
}
.controls.wrap-upload input[type="button"] {
	position: absolute;
	top: 0; left: 0;
}
.controls.wrap-upload input[type="text"] {
	width: 100%;
}
.attachment {
	padding: 8px;
	width: 150px;
	height: 150px;
	overflow: hidden;
	float: none;
	display: inline-block;
	margin-right: 5px;
}
.attachment img {
	width: 100%;
}
.attachment:hover, .attachment:focus {
  box-shadow: 0 0 0 1px #fff, 0 0 0 5px #1e8cbe;
}
.attachment a.pi-remove {
  display: none;
  background: #1e8cbe;
  color: #fff;
  padding: 3px;
  box-shadow: 0 0 0 1px #fff, 0 0 0 5px #1e8cbe;
  font-size: 20px;
  position: absolute;
  right: 5px;
  top: 5px;
  text-decoration: none;
}
.attachment:hover a.pi-remove {
	display: block;
}
.lux-gallery.posttype-post {
	margin-top: 30px;
}